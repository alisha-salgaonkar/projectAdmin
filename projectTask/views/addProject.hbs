<div style="width:600px;margin-left:auto;margin-right:auto;">
    <h2>CREATE PROJECT</h2>

    {{# if error }}
    <div class="alert alert-danger">
        <span>{{error}}</span>
    </div>
    {{/if}} {{# if success}}
    <div class="alert alert-success">
        <span>Project is successfully added.</span>
    </div>
    {{/if}}

    <form action="addProject" method="post">
        <div class="form-group">
            <input type="text" required="required" name="projName" class="form-control" id="projName" placeholder="Enter project name">
        </div>
        <div class="form-group">
            <textarea required="required" class="form-control" rows="5" id="projDescription" minlength="100" maxlength="250" name="projDescription"
                placteholder="Enter project description"></textarea>
        </div>
        <div class="form-row">
            <label class="col-md-12" for="projForm">Select Form(s)</label>
            <div class="form-group col-md-6">
                <select class="form-control" id="projForm" name="projForm">
                    <option value="select">Choose form</option>
                    <option value="polygon">Polygon</option>
                </select>
            </div>
            <div class="form-group col-md-6">
                <select class="form-control" id="projReminder" name="projReminder">
                    <option value="select">Set Reminder</option>
                    <option value="Daily">Daily</option>
                    <option value="Not set">Not Set</option>
                    <option value="Morning">Morning</option>
                </select>
            </div>
        </div>
        <div class="form-row">
            <label class="col-md-12" for="projForm">Assign User</label>
            <div class="form-group col-md-6">
                <select class="form-control" id="projUser" name="projUser">
                    <option>Select</option>
                    <option value="shanaya">Shanaya Malsawant</option>
                </select>
            </div>
        </div>
        <div class="form-row">
            <label class="col-md-12" for="projForm">Assign symbol</label>
            <div class="form-group col-md-6">
                <select class="form-control" id="projSymbol" name="projSymbol">
                    <option value="select">Default</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                </select>
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
        <a href="/">
            <button type="button" class="btn btn-primary">Cancel</button>
        </a>
    </form>
</div>
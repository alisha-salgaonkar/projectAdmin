    <script>
        $(document).ready(function () {
            // FORM SEARCH
            $("#formSearch").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $("#formListTab tbody tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });

            //USER SEARCH
            $("#userSearch").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $("#userListTab tbody tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });

            // PROJECT SEARCH
            $("#projectSearch").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $(".projectList .projectCard").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });


            $('#showMore').click(function (e) {
                e.stopPropagation();
                $('#selProjDescContainer').removeClass("selProjInfo");
                $('#showMore').hide();
                $('#showLess').show();
            });

            $('#showLess').click(function (e) {
                $('#selProjDescContainer').addClass("selProjInfo");
                $('#showMore').show();
                $('#showLess').hide();
            });
        });
    </script>
